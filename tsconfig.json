{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"declaration": true,
		"outDir": "./dist",

		/* Linting */
		"strict": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noFallthroughCasesInSwitch": true
	},
	"include": [
		"./constants",
		"./packages",
		"./utils"
	],
	"exclude": [
		"./packages/node",
		"./packages/vite",
		"./packages/vite/plugins/_template",
		"./packages/vite/plugins/react/page-routes/test-pages",
		"./packages/vite/plugins/react/page-routes/_test.ts"
	]
}
