{
	"compilerOptions": {
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",

		/* Linting */
		"strict": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noFallthroughCasesInSwitch": true
	},
	"include": [
    "./src",
	],
	"exclude": [
		"./src/packages/node",
		"./src/packages/vite",
		"./src/packages/vite/plugins/_template",
		"./src/packages/vite/plugins/react/page-routes/test-pages",
		"./src/packages/vite/plugins/react/page-routes/_test.ts"
	]
}
